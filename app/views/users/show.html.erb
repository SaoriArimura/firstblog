<h1><%= @user.name %>さんのページ</h1>

<% if @user.image? %>
  　　<%= image_tag @user.image.url %>
  　<% else %>
    　　<%= image_tag 'noimage.gif' %>
    　<% end %>
  <h2> <%= @user.profile %><h2>

      <フォーロー人数など統計>
      <p>
      <%= render 'users/shared/stats' %>
      </p>

      <%#ふぉろーボタン%>
      <div class="span8">
        <%= render 'follow_form' if signed_in? %>           
      </div>

      　<投稿一覧>
      <%if @posts.any?%>
        <h2>読んだ本</h2>
        <% @posts.each do |post| %>
          <li>
          <% @amazon = Amazon::Ecs.item_lookup( post.item.book_id, :response_group => 'Medium')%>
          <% @amazon.items.each do |i|%>
          <%= link_to i.get('DetailPageURL') do %>
            <%= image_tag i.get('SmallImage/URL'), {:style => 'border: none;'} %>
          <% end %>
          <%= i.get('ItemAttributes/Title') %>
          <%= i.get('ItemAttributes/Author') %>
        <% end %>
        <%= link_to post.review, post_path(post.id) %>
        <%= post.recommend_rate %>
        </li>
      <% end %>
      <% end %>
      <% if current_user == @user %>
        <%= link_to '新しい本の登録', items_path %>  
      <% end %>
