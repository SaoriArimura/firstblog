 <table class="table table-hover  table-bordered">
    <% users.each do |user| %>
      <tr data-href="/users/<%= user.id %>">
        <td class="col-sm-2"><%=image_tag user.image.thumb.url%></td>
            <td class="col-sm-10"><h4><%= user.name %></h4>
              <h4><%= user.profile %></h4>
              <h4><%= render partial: "users/shared/stats",locals: {user: user} %></h4>
           </td>
          </tr>
        <% end %>
      </table>

      <script src="./jquery.min.js"></script>
      <script>
   
        jQuery(function($) {
          $('tr[data-href]').addClass('clickable')
          .click(function(e) {
            if(!$(e.target).is('a')){
              window.location = $(e.target).closest('tr').data('href');
            };
          });
        });

      </script>



