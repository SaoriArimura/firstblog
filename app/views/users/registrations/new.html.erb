<div class="container">

<div class="panel panel-default">
  <div class="panel-heading">
    <h4><%= t('.title', :default => '新規登録') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name) ,:html => { :method => :post, role:"form" }) do |f| %>
      
       <div class="form-group has-error">
        <%= f.label "ユーザー名" %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "パスワード" %> 
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "確認のためにもう一度入力してください" %><br />
        <%= f.password_field :password_confirmation, class: "form-control"  %>
      </div>
      <div class="form-group">  
        <%= f.label "プロフィール画像" %> 
         <%= f.file_field :image%>
       </div>
        <div class="form-group">
           <%= f.label "プロフィール" %><br />
           <%= f.text_area :profile, class: "form-control" %>
            </div>   
      <%= f.submit t('.sign_up', :default => "登録"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


<%= link_to "戻る", :back ,class: "btn btn-default"%>



