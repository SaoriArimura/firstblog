<div>

  <%= form_tag items_index_path do %>
    <%= text_field_tag 'keyword', @keyword %>
    <%= submit_tag '検索' %>
  <% end %>
</div>
<div>
  <% if @book_id.present? %>
    <ul style="list-style: none;">
      <% @book_id.items.each do |i| %>
        <li style="clear: both;">
        <div style="width: 150px;float: left;text-align:center;">
          <%= link_to i.get('DetailPageURL') do %>
            <%= image_tag i.get('SmallImage/URL'), {:style => 'border: none;'} %>
          <% end %>
        </div>
        <div style="width: 150px; float: left;"><%= i.get('ASIN') %></div>
        <div style="width: 150px; float: left;">
          <%= link_to i.get('ItemAttributes/Title'), items_path(item: { book_id: i.get('ASIN')}), :method => :create %></div>
      <div style="width: 150px; float: left;"><%= i.get('ItemAttributes/Author') %></div>
        </li>
      <% end %> 
    </ul>
  <% end %>
</div>
