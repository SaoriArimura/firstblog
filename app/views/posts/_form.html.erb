
<div class="container"> 
  <%= form_for @post, :html => {:class => "form-horizontal"} do |f|%> 
    <fieldset>
      <h1><%= @daimei %></h1><hr>
      <div><h3><%= image_tag @img  ,:size => "120x150"%> <%= @title %></h3></div>

      <div class="form-group has-error">
        <%= f.label :category_tag_id, "カテゴリー",class: "control-label"%>
        <%= f.collection_select :category_tag_id , @categories, :id, :name , {prompt: "選択してください"},{class: "form-control"} %>
      </div>
      <div class="form-group has-error">
        <%= f.label :review, "読んだ感想" , class: "control-label" %>
        <%= f.text_area :review, class: "form-control", :rows =>"10" %>
      </div>
      <%= f.hidden_field :item_id, :value => @itemid %>
      <div class="form-actions has-error">
        <%= link_to "戻る",:back, class: "btn btn-default" %>
        <%= f.submit '登録', class: "btn btn-primary" %>
      </div>
    </fieldset>
  <% end %>
</div>



